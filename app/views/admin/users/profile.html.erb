<div class="container p-4">
  <div class="row p-3">
    <div class="col-3">
      <% if @user.image.attached? %>
        <div><%= image_tag @user.image, size: "100x100" %></div>
      <% else %>
        <div><%= image_tag "no_image.jpg", size: "100x100" %></div>
      <% end %>
    </div>
  </div>
  <div class="row p-2">
    <h4 class="col-3">
      <%= @user.nickname %>
    </h4>
  </div>
  <div class="row p-2">
    <div class="col-3">
      <%= @user.introduction %>
    </div>
  </div>
  <div class="pb-2">
    <%= render 'public/relationships/relationship', user: @user %>
  </div>
    <% @posts.each do |post| %>
  <div class="container border">
    <div class="row pt-3">
      <div class="col">
        <% if post.user.image.attached? %>
          <%= image_tag post.user.image, size: "100x100" %>
        <% else %>
          <%= image_tag "no_image.jpg", size: "100x100" %>
        <% end %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to admin_post_path(post.id), style: "color: black" do %>
          <%= post.body %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to admin_post_path(post.id), style: "color: black" do %>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "200x200" %>
          <% else %>
            <td></td>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3 pb-3">
      <div class="col">
        <%= post.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>
  </div>
    <% end %>
</div>