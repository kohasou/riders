<div class="container p-4">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>投稿詳細</strong>
      </h4>
    </div>
  </div>
  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3">テキスト</td>
        <td class="col-5"><%= @post.body %></td>
      </tr>
      <tr>
        <td class="col-3">画像</td>
        <td class="col-5">
          <% if @post.image.attached? %>
            <%= image_tag @post.image, size: "200x200" %>
          <% else %>
            <td></td>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '削除', post_path(@post), method: :delete, class:"btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>

  <div class="container p-5">
    <% @post.comments.each do |comment| %>
    <div class="row pb-3">
        <%= comment.user.nickname %>
        <%= comment.created_at.strftime('%m/%d') %>
        <%= comment.reply %>
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class:"link_danger" %>
    </div>
    <% end %>
  </div>
</div>