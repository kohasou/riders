<div class="container p-4">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>投稿詳細</strong>
      </h4>
    </div>
  </div>
  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3 pt-3">テキスト</td>
        <td class="col-5 pt-3"><%= @post.body %></td>
      </tr>
      <tr>
        <td class="col-3 pt-3">画像</td>
        <td class="col-5 pt-3">
          <% if @post.image.attached? %>
            <%= image_tag @post.image, size: "200x200" %>
          <% else %>
            <td></td>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '削除', admin_post_path(@post.id), method: :delete, class:"btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>
</div>