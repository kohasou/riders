<div class="container">
  <div class="col-3 p-4">
    <h4>
      <strong>ログイン</strong>
    </h4>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-3">
      <p>
        <strong>会員の方はこちらからログイン</strong>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>パスワード</p>
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "ログイン", class:"btn btn-success" %>
    </div>
  </div>
<% end %>

  <div class="row">
    <div class="col-3">
      <p>
        <strong>会員登録がお済みでない方</strong>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <p><%= render "public/shared/links" %>こちらから新規登録を行ってください。</p>
    </div>
  </div>
</div>

