<div class="container">
  <div class="row p-4">
    <h4>
      <strong>投稿一覧</strong>
    </h4>
    <div class="col">
      <%= link_to new_post_path, class:"btn btn-outline-dark mr-3" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
    <% @posts.each do |post| %>
  <div class="container border">
    <div class="row">
      <div class="col">
        <%= image_tag post.user.image, size: "100x100" %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= post.body %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <% if post.image.attached? %>
          <%= image_tag post.image %>
        <% else %>
          <td></td>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
        <% if post.niced_by?(current_user) %>
          <p>
            <%= link_to post_nices_path(post), method: :delete do %>
              ♥<%= post.nices.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_nices_path(post), method: :post do %>
              ♡<%= post.nices.count %> いいね
            <% end %>
          </p>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>