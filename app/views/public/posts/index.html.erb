<div class="container">
  <div class="row">
    <h4>
      <strong>投稿一覧</strong>
    </h4>
    <div class="col">
      <%= link_to '＋', new_post_path, class:"btn btn-outline-dark mr-3" %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="col-1">テキスト</th>
        <th class="col-3">画像</th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th class="row"><%= post.body %></th>
        <td><%= post.image %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>