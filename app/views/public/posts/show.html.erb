<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>投稿詳細</strong>
      </h4>
    </div>
  </div>
  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3">テキスト</td>
        <td class="col-5"><%= @post.body %></td>
      </tr>
      <tr>
        <td class="col-3">画像</td>
        <td class="col-5">
          <% if @post.image.attached? %>
            <%= image_tag @post.get_image(200,200) %>
          <% else %>
            <td></td>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '編集する', edit_post_path, class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>

  <div>
    <p>コメント件数：<%= @post.comments.count %></p>
    <% @post.comments.each do |comment| %>
      <%= comment.user.nickname %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><br>
      <%= comment.reply %>
      <% if comment.user == current_user %>
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= form_with model: [@post, @comment] do |f| %>
      <%= f.text_area :reply, rows: '5', placeholder: "コメントをここに" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
  <div>
    <% if @post.niced_by?(current_user) %>
      <p>
        <%= link_to post_nices_path(@post), method: :delete do %>
          ♥<%= @post.nices.count %> いいね
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to post_nices_path(@post), method: :post do %>
          ♡<%= @post.nices.count %> いいね
        <% end %>
      </p>
    <% end %>
  </div>
</div>