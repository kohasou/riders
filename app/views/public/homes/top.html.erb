<div class="container p-4">
  <div class="row">
    <h3 class="text-center">無料で新規登録して投稿してみましょう！</h3>
  </div>
  <div class="row p-4">
    <h4>
      <strong>投稿一覧</strong>
    </h4>
  </div>
    <% @posts.each do |post| %>
  <div class="container border">
    <div class="row">
      <div class="col">
        <%= image_tag post.user.image, size: "100x100" %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= post.body %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <% if post.image.attached? %>
          <%= image_tag post.image %>
        <% else %>
          <td></td>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
      </div>
    <% end %>
    </div>
  </div>
</div>