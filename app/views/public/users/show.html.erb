<div class="container p-4">
  <div class="row">
    <div class="col-3">
      <div><%= image_tag @user.image, size: "100x100" %></div>
    </div>
    <div class="col">
      <p><%= link_to '編集する', edit_customer_path, class:"btn btn-success" %></p>
    </div>
  </div>
  <div class="row">
    <h4 class="col-3">
      <%= @user.nickname %>
    </h4>
  </div>
  <div class="row">
    <div class="col-3">
      <%= @user.introduction %>
    </div>
  </div>
  <%= render 'public/relationships/relationship', user: @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
    <% @posts.each do |post| %>
  <div class="container border">
    <div class="row">
      <div class="col">
        <%= image_tag post.user.image, size: "100x100" %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= post.body %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <% if post.image.attached? %>
          <%= image_tag post.image %>
        <% else %>
          <td></td>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
        <% if post.niced_by?(current_user) %>
          <p>
            <%= link_to post_nices_path(post), method: :delete do %>
              ♥<%= post.nices.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_nices_path(post), method: :post do %>
              ♡<%= post.nices.count %> いいね
            <% end %>
          </p>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>