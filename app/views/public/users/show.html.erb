<div class="container p-4">
  <div class="row p-3">
    <div class="col-3">
      <% if @user.image.attached? %>
        <div><%= image_tag @user.image, size: "100x100" %></div>
      <% else %>
        <div><%= image_tag "no_image.jpg", size: "100x100" %></div>
      <% end %>
    </div>
    <div class="col">
      <p><%= link_to '編集する', edit_customer_path, class:"btn btn-success" %></p>
    </div>
  </div>
  <div class="row p-2">
    <h4 class="col-3">
      <%= @user.nickname %>
    </h4>
  </div>
  <div class="row p-2">
    <div class="col-3">
      <%= @user.introduction %>
    </div>
  </div>
  <div class="pb-2">
    <%= render 'public/relationships/relationship', user: @user %>
    <% unless @user == current_user %>
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
      <% end %>
    <% end %>
  </div>
  <div class="pb-2">
    <p><%=link_to "いいね一覧", nice_path(@user.id), class:"btn btn-primary" %></p>
  </div>
    <% @posts.each do |post| %>
  <div class="container border">
    <div class="row pt-3">
      <div class="col">
        <% if post.user.image.attached? %>
          <%= image_tag post.user.image, size: "100x100" %>
        <% else %>
          <%= image_tag "no_image.jpg", size: "100x100" %>
        <% end %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to post_path(post.id), style: "color: black" do %>
          <%= post.body %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to post_path(post.id), style: "color: black" do %>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "200x200" %>
          <% else %>
            <td></td>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
        <% if post.niced_by?(current_user) %>
          <p>
            <%= link_to post_nices_path(post), method: :delete do %>
              ♥<%= post.nices.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_nices_path(post), method: :post do %>
              ♡<%= post.nices.count %> いいね
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="row pt-3 pb-3">
      <div class="col">
        <%= post.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>
  </div>
    <% end %>
</div>