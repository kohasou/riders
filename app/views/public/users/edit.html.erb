<div class="container p-4">
  <div class="col-3">
    <h4>
      <strong>会員情報編集</strong>
    </h4>
  </div>

<%= form_with model: @user, url: customer_path do |f| %>

  <div class="row">
    <div class="col-3">
      <p>名前</p>
    </div>
    <div class="col-3">
      <p>(姓) <%= f.text_field :last_name %></p>
    </div>
    <div class="col-3">
      <p>(名) <%= f.text_field :first_name %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>ニックネーム</p>
    </div>
    <div class="col-3">
      <p><%= f.text_field :nickname %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>プロフィール画像</p>
    </div>
    <div class="col-3">
      <p><%= f.file_field :image, accept: "image/*" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>自己紹介文</p>
    </div>
    <div class="col-3">
      <p><%= f.text_area :introduction %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
    <div class="col-3">
      <%= link_to '退会する', withdrawal_path, class:"btn btn-danger" %>
    </div>
  </div>
<% end %>