    <% posts.each do |post| %>
  <div class="container border">
    <div class="row pt-3">
      <div class="col">
        <% if post.user.image.attached? %>
        <!-- ユーザーに画像がある場合 -->
          <%= image_tag post.user.image, size: "100x100" %>
        <% else %>
        <!-- ユーザーに画像がない場合 -->
          <%= image_tag "no_image.jpg", size: "100x100" %>
        <% end %>
        <%= post.user.nickname %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to post_path(post.id), style: "color: black" do %>
        <!-- テキスト -->
          <%= post.body %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <%= link_to post_path(post.id), style: "color: black" do %>
        <!-- 画像を投稿する場合-->
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "200x200" %>
          <% else %>
          <!-- 画像を投稿しない場合-->
            <td></td>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col">
        <!-- コメントの件数-->
        <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
        <!-- いいねの件数-->
        <% if post.niced_by?(current_user) %>
          <p>
            <%= link_to post_nices_path(post), method: :delete do %>
              ♥<%= post.nices.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_nices_path(post), method: :post do %>
              ♡<%= post.nices.count %> いいね
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="row pt-3 pb-3">
      <div class="col">
        <!-- 投稿日 -->
        <%= post.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>
  </div>
    <% end %>